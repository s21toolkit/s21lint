{
	"name": "@s21toolkit/lint",
	"description": "C/C++ linter for school 21 project",
	"version": "1.0.6-dev.0",
	"private": false,
	"type": "module",
	"exports": {
		"default": "./build/index.js",
		"require": "./build/index.cjs",
		"types": "./build/index.d.ts"
	},
	"bin": {
		"s21lint": "./build/main.js"
	},
	"files": [
		"build/*",
		"README.md"
	],
	"scripts": {
		"build:compile": "tsup",
		"build": "pnpm lint && pnpm build:compile",
		"lint": "tsc && bun biome check .",
		"lint:fix": "bun biome check --apply .",
		"compile-grammar": "pnpm tree-sitter build-wasm --",
		"compile-grammar:c": "pnpm compile-grammar node_modules/tree-sitter-c",
		"compile-grammar:cpp": "pnpm compile-grammar node_modules/tree-sitter-cpp",
		"compile-grammars": "pnpm compile-grammar:c",
		"prepublishOnly": "pnpm build",
		"postversion": "git push & git push --tags",
		"release": "npm version -m 'chore(release): %s' --"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.4",
		"@tsconfig/node20": "^20.1.4",
		"@tsconfig/strictest": "^2.0.5",
		"@types/common-tags": "^1.8.4",
		"@types/node": "^20.12.7",
		"tree-sitter-c": "^0.20.8",
		"tree-sitter-cli": "^0.21.0",
		"tree-sitter-cpp": "^0.20.5",
		"tsup": "^8.0.2"
	},
	"peerDependencies": {
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"cmd-ts": "^0.13.0",
		"common-tags": "^1.8.2",
		"fast-glob": "^3.3.2",
		"web-tree-sitter": "^0.21.0"
	},
	"volta": {
		"node": "20.12.2"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	}
}
