{
	"extends": [
		"@tsconfig/node20/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"declaration": false,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@languages/*": ["./languages/*"]
		}
	},
	"exclude": ["build"]
}
